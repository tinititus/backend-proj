{
  "env": {
    "es2018": true,
    "browser": true
    // "es2021": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "semi": false, "trailingComma": "all" }
    ]
  }
}
